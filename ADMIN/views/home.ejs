<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <a href="/?time=ngay" 
    type="button" class="btn bg-red waves-effect m-b-15 collapsed">Xem thống kê ngày</a>
    <a href="/?time=thang" 
    type="button" class="btn bg-red waves-effect m-b-15 collapsed">Xem thống kê tháng</a>
   

    <div class="row clearfix">
       
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-blue hover-expand-effect">
               
                <div class="content">
                    <div class="text">Tổng Doanh thu</div>
                    <div class="number count-to ">

                        <%= String(Math.round(doanhthus.total)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                            đ
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-gray hover-expand-effect">
               
                <div class="content">
                    <div class="text">Tổng Tiền thành viên</div>
                    <div class="number count-to ">

                        <%= String(Math.round(doanhthus.useramount)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                            đ
                    </div>
                </div>
            </div>
        </div>
        <%for(let i=0;i<doanhthus.naptiens.length;i++){%>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-cyan hover-expand-effect">
                    <div class="content">
                        <div class="text">
                          Nạp tiền <b><%-doanhthus.naptiens[i].gate%></b>
                        </div>
                        <div class="number count-to">
                            <%= String(Math.round(doanhthus.naptiens[i].totalAmount)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                                đ
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
            <%for(let i=0;i<doanhthus.ruttiens.length;i++){%>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-red hover-expand-effect">
                        <div class="content">
                            <div class="text">
                              Rút tiền <b><%-doanhthus.ruttiens[i].gate%></b>
                            </div>
                            <div class="number count-to">
                                <%= String(Math.round(doanhthus.ruttiens[i].totalAmount)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                                    đ
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>

    </div>

    <div class="card">
        <div class="header">
            <h2>
                Phí đổi thẻ

            </h2>

        </div>
        <div class="body">
            <ul class="nav nav-tabs">
                <% for (var i=0; i < fees.length; i++) { %>
                    <%if(i==0){%>
                        <li class="active"><a data-toggle="tab" href="#<%=fees[i]._id%>">
                                <%=fees[i]._id%>
                            </a></li>
                        <%}else{%>
                            <li><a data-toggle="tab" href="#<%=fees[i]._id%>">
                                    <%=fees[i]._id%>
                                </a></li>
                            <%}%>
                                <% } %>
            </ul>
            <div class="tab-content">

                <% for (var i=0; i < fees.length; i++) { %>
                    <div id="<%=fees[i]._id%>" class="tab-pane fade <%=(i==0?'in active':'')%>">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <% for (var iz=0; iz < fees[i].list.length; iz++) { %>
                                        <th class="text-center">Thẻ <%=
                                                String(Math.round(fees[i].list[iz].value)).replace(/(.)(?=(\d{3})+$)/g,'$1,')%>
                                                đ</th>
                                        <% } %>
                                            <th class="text-center">
                                                Chức năng
                                            </th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <tr>
                                    <% for (var iz=0; iz < fees[i].list.length; iz++) { %>


                                        <td>
                                            <%=fees[i].list[iz].fees%>
                                        </td>
                                        <% } %>
                                            <th class="text-center">
                                                <button class="btn btn-xs bg-red waves-effect collapsed" type="button">
                                                    Tình đầu là tình dang dở
                                                </button>

                                            </th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <% } %>


            </div>
            <h2 class="card-inside-title">Kê phần trăm</h2>
            <div class="form-group">
                <div class="form-line">
                    <input id="percent" value="<%= setting.upFee %>" type="text" class="form-control"
                        placeholder="Số tiền rút tối thiểu">
                </div>
                <button onclick="saveUpfee()" class="btn bg-cyan waves-effect m-b-15 collapsed" type="button">
                    Lưu lại
                </button>
            </div>



            <button class="btn bg-cyan waves-effect m-b-15 collapsed" type="button" data-toggle="collapse"
                data-target="#thutufee" aria-expanded="false" aria-controls="thutufee">
                Sắp thứ tự hiển thị
            </button>
            <a href="/getFeeCard" onclick="return confirm('Bạn có chắc muốn xóa giá cũ và cập nhật lại bảng giá mới?');"
                type="button" class="btn bg-red waves-effect m-b-15 collapsed">Lấy bảng phí từ
                api (Reset thứ tự)</a>

            <a href="/getFeeCard?sort=false"
                onclick="return confirm('Bạn có chắc muốn xóa giá cũ và cập nhật lại bảng giá mới?');" type="button"
                class="btn bg-red waves-effect m-b-15 collapsed">Lấy bảng phí từ
                api không Reset thứ tự</a>




            <div class="collapse" id="thutufee" aria-expanded="false" style="height: 0px;">
                <h3>Sắp xếp thứ tự hiển thị</h3>
                <div class="clearfix m-b-20">
                    <div class="dd">
                        <ol class="dd-list">
                            <% for (var i=0; i < setting.sortFeeCard.length; i++) { %>
                                <li class="dd-item" data-name="<%=setting.sortFeeCard[i]%>">
                                    <div class="dd-handle">
                                        <%=setting.sortFeeCard[i]%>
                                    </div>
                                </li>
                                <% } %>
                        </ol>
                    </div>
                </div>
                <a onclick="saveSortFeeCard()" type="button" class="btn bg-red waves-effect m-b-15 collapsed">Lưu sắp
                    xếp</a>
                <div style="display: none">
                    <b>Output JSON</b>
                    <textarea id="listFeeSort" cols="30" rows="3" class="form-control no-resize"
                        readonly><%-listsort%></textarea>
                </div>
            </div>





        </div>
    </div>
</div>

