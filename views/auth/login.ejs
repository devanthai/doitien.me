<div class="section-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-dark">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/auth/login" class="text-dark">Đăng nhập</a>
                    </li>
                </ol>

            </div>
        </div>
    </div>
</div>

<div class="section-gap">
    <div class="container">
        <%if(typeof message !="undefined" && message){%>
            <%-message%>
                <%}%>

        <div class="row justify-content-center" style="padding: 85px 0;">
            <div class="col-md-6">
                <div class="card card-account">
                    <div class="card-header">
                        <h1 class="card-title">
                            Đăng nhập tài khoản
                        </h1>
                    </div>
                    <div class="card-body p-4">
                        <form method="POST" class="mb-0" action="/auth/login" aria-label="Đăng nhập">

                            <div class="form-group mb-4">
                                <input type="text" class="form-control" name="phoneOrEmail" value="" required=""
                                    autofocus="" placeholder="Email hoặc Số điện thoại" autocomplete="off"
                                    id="username">
                            </div>
                            <div class="form-group mb-4">
                                <input type="password" class="form-control" autocomplete="off" name="password"
                                    required="" placeholder="Mật khẩu" id="password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-theme waves-light waves-effect">
                                    <i class="fas fa-sign-in-alt mr-2"></i>
                                    Đăng nhập
                                </button>

                            </div>
                        </form>
                        <div class="card-body_action">

                            <span>Chưa có tài khoản?
                                <a href="/auth/register">Đăng ký ngay!</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>