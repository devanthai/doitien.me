<div class="section-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-dark">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/account/profile/edit" class="text-dark">Thông tin tài khoản</a>
                    </li>
                </ol>

            </div>
        </div>
    </div>
</div>

<div class="section-gap">
    <div class="container">
        <%if(typeof message !="undefined" && message){%>
            <%-message%>
                <%}%>
                    <div class="template-1_information">

                        <div class="card rounded-sm bg-white pt-3">
                            <div class="card-header bg-transparent rounded-0 border-0">
                                <div class="template-1-heading">
                                    <h4>
                                        Sửa thông tin tài khoản
                                    </h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="information-form" id="informationFrom">
                                    <form action="/account/profile/edit" method="POST">

                                        <div class="row align-items-center no-gutters pb-3 mb-3">
                                            <div class="col-md-4">
                                                <label for="user" class="mb-3 mb-md-0 font-weight-bold">
                                                    Tên đăng nhập
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group mb-0">
                                                    <input type="text" class="form-control" name="username"
                                                        value="<%-user.Username%>" readonly="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row align-items-center no-gutters pb-3 mb-3">
                                            <div class="col-md-4">
                                                <label for="fullname" class="mb-3 mb-md-0 font-weight-bold">
                                                    Họ và tên
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group mb-0">
                                                    <input type="text" class="form-control" name="name"
                                                        value="<%-userInfo.name%>">
                                                </div>
                                            </div>
                                        </div>





                                        <div class="row align-items-center no-gutters pb-3 mb-3">
                                            <div class="col-md-4">
                                                <label for="email" class="mb-3 mb-md-0 font-weight-bold">
                                                    Email
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group mb-0">

                                                    <%if(userInfo.email==''){%>
                                                        <input type="text" class="form-control" name="email" value="">
                                                        <%}else{%>
                                                            <input type="text" class="form-control" name="email"
                                                                value="<%-userInfo.email%>" readonly="">
                                                            <%}%>

                                                </div>
                                            </div>
                                        </div>



                                        <div class="row align-items-center no-gutters pb-3 mb-3">
                                            <div class="col-md-4">
                                                <label for="phone" class="mb-3 mb-md-0 font-weight-bold">
                                                    Số điện thoại
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group mb-0">

                                                    <%if(userInfo.phone==''){%>
                                                        <input type="text" class="form-control" name="phone" value="">
                                                        <%}else{%>
                                                            <input type="text" class="form-control" name="phone"
                                                                value="<%-userInfo.phone%>" readonly="">
                                                            <%}%>



                                                </div>
                                            </div>
                                        </div>




                                        <div class="mt-5 pt-4 border-top text-center text-md-left">
                                            <button class="btn btn-success template-1-btn btn-sm">Cập nhật thông tin
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="loading-pure" style="display: none">
                                <div></div>
                                <div></div>
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                    </div>

    </div>
</div>